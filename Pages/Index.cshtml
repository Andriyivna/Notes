@page
@model Notes.IndexModel



 <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
<section class="main-section row-flex">
    <div class="first-div">
        <div class="row-flex toolbar bottom-border">
            <p class="main-title">NOTES</p>
            <p><a class="add read-more" href='@Url.Page("/Create")'>Add note</a></p>
        </div>
        @foreach (var note in Model.NotesList)
        {
            <form class="note" method="post">
                <p class="note-name" >@note.Name</p>
                <p class="note-short-content">@note.Content</p>
                 <div class="delete-button "  >
                     <button class="font-button" type="submit" asp-page-handler="Delete" asp-route-id="@note.Id"> Delete</button>
                     <a class="read-more" asp-page="DisplayNotes"  asp-route-id="@note.Id">Open</a>
                </div>
            </form>
        }
    </div>
    <div class="second-div">
        <div class=" row-flex toolbar">
        </div>
        <div class="notes-bg">
            <p class="help-message padding-left"> "Open" - to open existing notes for edit it or to read all text</p>
            <p class="help-message padding-left"> "Add notes"- to add new notes </p>

        </div>
    </div>
</section>


